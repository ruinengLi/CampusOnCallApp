<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_home"
    android:background="@color/theme_green_1"
    tools:context=".ui.home.HomeFragment"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:id="@+id/card_search"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackground"
        app:cardBackgroundColor="@android:color/white"
        app:cardCornerRadius="@dimen/twelve_dp"
        app:cardElevation="@dimen/twelve_dp"
        app:layout_constraintVertical_bias="1"
        app:layout_constraintHeight_percent="0.4"
        app:layout_constraintWidth_percent="0.7">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:textAlignment="gravity"
                android:layout_gravity="center_vertical"
                android:background="@drawable/ic_baseline_search_24"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:textAlignment="gravity"
                android:gravity="center_vertical"
                android:text="搜索"
                android:clickable="true"
                android:textSize="18sp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <androidx.cardview.widget.CardView
                android:id="@+id/card_display_banner"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="15dp"
                android:foreground="?attr/selectableItemBackground"
                app:cardBackgroundColor="@android:color/white"
                app:cardCornerRadius="@dimen/twelve_dp"
                app:cardElevation="@dimen/twelve_dp"
                app:layout_constraintHeight_percent="0.4"
                app:layout_constraintWidth_percent="0.7">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:scaleType="centerCrop"
                android:src="@drawable/picture3"/>
            </androidx.cardview.widget.CardView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="| 功能模块"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textStyle="bold"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_display_images"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="15dp"
                android:foreground="?attr/selectableItemBackground"
                app:cardBackgroundColor="@android:color/white"
                app:cardCornerRadius="@dimen/twelve_dp"
                app:cardElevation="@dimen/twelve_dp"
                app:layout_constraintHeight_percent="0.4"
                app:layout_constraintWidth_percent="0.7">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:id="@+id/home_treehole"
                        android:layout_marginStart="10dp"
                        android:clickable="true">

                        <ImageView
                            android:layout_width="110dp"
                            android:layout_height="110dp"
                            android:scaleType="centerInside"
                            android:src="@drawable/treehole1"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:text="树洞"
                            android:textAlignment="center"
                            android:textColor="@color/theme_green_2"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:orientation="vertical"
                        android:id="@+id/home_recruit"
                        android:clickable="true"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toRightOf="@id/home_treehole">

                        <ImageView
                            android:layout_width="110dp"
                            android:layout_height="110dp"
                            android:scaleType="centerInside"
                            android:src="@drawable/recruit1"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="招募"
                            android:textAlignment="center"
                            android:textColor="@color/theme_green_2"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:clickable="true"
                        android:layout_marginStart="10dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toRightOf="@id/home_recruit"
                        android:id="@+id/home_courseComment">
                        <ImageView
                            android:layout_width="110dp"
                            android:layout_height="110dp"
                            android:scaleType="centerInside"
                            android:src="@drawable/img2"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="课程评价"
                            android:textAlignment="center"
                            android:textColor="@color/theme_green_2"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:id="@+id/home_sharing"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="15dp"
                        android:clickable="true"
                        app:layout_constraintTop_toBottomOf="@id/home_treehole"
                        app:layout_constraintLeft_toLeftOf="parent">

                        <ImageView
                            android:layout_width="110dp"
                            android:layout_height="110dp"
                            android:scaleType="centerInside"
                            android:src="@drawable/img1"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="资料分享"
                            android:textAlignment="center"
                            android:textColor="@color/theme_green_2"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:id="@+id/home_exchange"
                        app:layout_constraintTop_toBottomOf="@id/home_recruit"
                        app:layout_constraintLeft_toRightOf="@id/home_sharing"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:clickable="true">

                        <ImageView
                            android:layout_width="110dp"
                            android:layout_height="110dp"
                            android:scaleType="centerInside"
                            android:src="@drawable/img3"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="闲置"
                            android:textAlignment="center"
                            android:textColor="@color/theme_green_2"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:id="@+id/home_lostandfound"
                        app:layout_constraintLeft_toRightOf="@id/home_exchange"
                        app:layout_constraintTop_toBottomOf="@id/home_courseComment">

                        <ImageView
                            android:layout_width="110dp"
                            android:layout_height="110dp"
                            android:scaleType="centerInside"
                            android:src="@drawable/lostandfound"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="失物招领"
                            android:textAlignment="center"
                            android:textColor="@color/theme_green_2"/>
                    </LinearLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="| 实时动态"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textStyle="bold"/>
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="800dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:orientation="vertical"
                android:id="@+id/recycler_home">
            </androidx.recyclerview.widget.RecyclerView>
        </LinearLayout>
    </ScrollView>
</LinearLayout>