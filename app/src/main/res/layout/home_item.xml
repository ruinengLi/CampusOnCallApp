<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/card_updated_view"
        android:foreground="?attr/selectableItemBackground"
        app:cardBackgroundColor="@android:color/white"
        app:cardCornerRadius="@dimen/twelve_dp"
        app:cardElevation="@dimen/twelve_dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHeight_percent="0.4"
        app:layout_constraintWidth_percent="0.7">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_marginTop="15dp"
            android:layout_marginStart="10dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/post_profile"
            android:clickable="true">
        </ImageView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_marginTop="15dp"
                android:layout_marginStart="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/post_username"
                android:text="user_name"
                android:textStyle="bold"
                android:textColor="@color/btn_filled_blue_bg_pressed"
                android:textSize="18sp"
                android:clickable="true">
            </TextView>
            <TextView
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/post_time"
                android:text="1970/01/01">
            </TextView>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="15dp"
        android:text="post title"
        android:textSize="18sp"
        android:id="@+id/post_title"
        android:textStyle="bold"
        android:textColor="@color/black">
    </TextView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="15dp"
        android:textSize="15sp"
        android:text="post content"
        android:id="@+id/post_content">
    </TextView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_marginTop="20dp"
            android:layout_marginStart="30dp"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/favorite"
            android:id="@+id/post_favorite"
            android:clickable="true"
            android:visibility="invisible">
        </ImageView>
        <ImageView
            android:layout_marginTop="20dp"
            android:layout_marginStart="-20dp"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/favorite_2"
            android:id="@+id/post_favorite_2"
            android:clickable="true"
            android:visibility="visible">
        </ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textAlignment="gravity"
            android:gravity="center_vertical"
            android:text="0"
            android:textSize="12sp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/post_favorite"
            android:id="@+id/post_favorite_num">
        </TextView>
        <ImageView
            android:layout_marginTop="20dp"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="80dp"
            android:background="@drawable/comment"
            android:clickable="true"
            app:layout_constraintLeft_toRightOf="@id/post_favorite_num"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/post_comment"
            android:visibility="invisible">
        </ImageView>
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="-20dp"
            android:background="@drawable/comment_2"
            android:clickable="true"
            app:layout_constraintLeft_toRightOf="@id/post_favorite_num"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/post_comment_2"
            android:visibility="visible">
        </ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textAlignment="gravity"
            android:gravity="center_vertical"
            android:layout_marginStart="15dp"
            android:text="0"
            android:layout_marginTop="10dp"
            android:textSize="12sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/post_comment"
            android:id="@+id/post_comment_num">
        </TextView>
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/likes"
            android:layout_marginStart="80dp"
            android:clickable="true"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/post_comment_num"
            android:id="@+id/post_likes"
            android:visibility="invisible">
        </ImageView>
        <ImageView
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/likes_2"
            android:layout_marginStart="-20dp"
            android:clickable="true"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/post_comment_num"
            android:id="@+id/post_likes_2"
            android:visibility="visible">
        </ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textAlignment="gravity"
            android:gravity="center_vertical"
            android:layout_marginStart="12dp"
            android:layout_marginTop="10dp"
            android:text="0"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/post_likes"
            android:id="@+id/post_likes_num">
        </TextView>
    </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>